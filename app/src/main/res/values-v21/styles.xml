<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="android:windowSharedElementEnterTransition">
            @transition/transition_two
        </item>
        <item name="colorPrimary">#00aff0</item>
        <item name="colorPrimaryDark">#00aff0</item>
        <item name="colorAccent">#FF9C0A</item>
    <item name="android:windowContentTransitions">true</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>
    <style name="SplashTheme.Theme" parent="@style/AppTheme">
        <item name="colorPrimaryDark">#00aff0</item>
    <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>
    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
    <style name="expandedappbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">48sp
        </item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="collapsedappbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
    </style>
</resources>
